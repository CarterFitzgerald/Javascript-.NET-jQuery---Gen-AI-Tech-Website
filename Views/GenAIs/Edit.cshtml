@model Final_Assignment_Carter_Fitzgerald.Models.GenAIs

@{
    ViewData["Title"] = "Edit";
}

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<div id="create-container">
    <h1 id="create-heading">Edit GenAI Website</h1>
    <div id="form-container">
        <hr id="yellow-line-7">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Likes" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="GenAIName" class="control-label"></label>
                        <input asp-for="GenAIName" class="form-control" />
                        <span asp-validation-for="GenAIName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Summary" class="control-label"></label>
                        <textarea asp-for="Summary" rows="5" class="form-control"></textarea>
                        <span asp-validation-for="Summary" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImgFile" class="control-label"></label>
                        <input asp-for="ImgFile" type="file" class="form-control" />
                        <span asp-validation-for="ImgFile" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input id="create-btn" type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div>
        <a id="back-link" asp-action="Index">Back to GenAI Websites</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
